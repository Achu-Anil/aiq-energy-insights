generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model State {
  id               Int               @id @default(autoincrement())
  code             String            @unique
  name             String
  plants           Plant[]
  stateGenerations StateGeneration[] @relation("StateToStateGeneration")

  @@map("states")
}

model Plant {
  id          Int               @id @default(autoincrement())
  name        String
  stateId     Int               @map("state_id")
  state       State             @relation(fields: [stateId], references: [id])
  generations PlantGeneration[]

  @@unique([name, stateId])
  @@map("plants")
}

model PlantGeneration {
  id            Int     @id @default(autoincrement())
  plantId       Int     @map("plant_id")
  year          Int
  netGeneration Decimal @map("net_generation") @db.Decimal(18, 2)
  plant         Plant   @relation(fields: [plantId], references: [id])

  @@unique([plantId, year])
  @@index([year, netGeneration])
  @@index([plantId, year])
  @@map("plant_generations")
}

model StateGeneration {
  id              Int     @id @default(autoincrement())
  stateId         Int     @map("state_id")
  year            Int
  totalGeneration Decimal @map("total_generation") @db.Decimal(18, 2)
  state           State   @relation("StateToStateGeneration", fields: [stateId], references: [id])

  @@unique([stateId, year])
  @@index([year, totalGeneration])
  @@map("state_generations")
}
